@model PierreLidholm.Core.ViewModels.ContactFormViewModel
@using PierreLidholm.Core.Controllers
@using System.Web.Mvc.Html
@{
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}


@if ((string)TempData["status"] == "OK")
{
    <text>
    <div class="container">
        <div class="row">
            <div class="col text-center p-5">
                <i class="far fa-2x fa-thumbs-up"></i>
                <div>
                    Tack för att du kontaktar oss.
                </div>
            </div>
        </div>
    </div>
    </text>
}
else
{
    using (Html.BeginUmbracoForm<ContactController>("HandleContactForm"))
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="name-textbox">Ditt namn</label>
            <span class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg", placeholder = "Ditt namn", Maxlength = "30" })
        </div>

        <div class="form-group">
            <label for="name-textbox">Email</label>
            <span class="field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Email" })
        </div>

        <div class="form-group">
            <label for="name-textbox">Ämne</label>
            <span class="field-validation-valid" data-valmsg-for="Subject" data-valmsg-replace="true"></span>
            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control form-control-lg", placeholder = "Ämne", Maxlength = "30" })
        </div>

        <div class="form-group">
            <label for="name-textbox">Kommentar</label>
            <span class="field-validation-valid" data-valmsg-for="Comnment" data-valmsg-replace="true"></span>
            @Html.TextAreaFor(m => m.Comnment, new { @class = "form-control form-control-lg", placeholder = "Kommentar", Maxlength = "500" })
        </div>

        <div class="form-grop">
            <button class="btn btn-outline-primary btn-lg" type="submit">Skicka</button>
        </div>
    }

}

